<% include ./partials/header.ejs %>

<div class=" profile  min-h-screen  w-full bg-zinc-800 text-white pt-1">
    <form hidden id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image"></input>
    </form>
    <div class="profiledetails  flex flex-col items-center ">
        <div class="relative">
            <span  id="uploadicon" class="w-8 h-8 absolute bottom-3 right-2 rounded-full flex item-center justify-center bg-zinc-300">
                <i class="text-zinc-800 ri-edit-2-line mt-1"></i>
            </span>
            <div class="bg-zinc-100 w-40 h-40  mt-2 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>">
            </div>
        </div>
        
        <h1 class="text-3xl font-semibold">mak</h1>
        <h3 class="text-md">@username</h3>
        <a href="/edit" class=" px-7 py-2 bg-zinc-500 rounded-full inline-block mt-2">Edit</a>
        <a href="/add" class="bg-red-700 px-3 py-1 mt-5 rounded-md text-s">Add new Post</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-20">
        <div class="card">
        <div class="w-52 h-40 bg-zinc-100 rounded-lg overflow-hidden ">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>"> alt="image">
        </div>
        <a href="/show/posts" class=" inline-block font-semibold mt-5">Your Uploads</a>
        <h5 class="text-sm font-regular opacity-60"><%= user.posts.length%></h5>
    </div>
    </div>
</div>

<script>
    let load=document.querySelector("#uploadicon");
    load.addEventListener("click",(event)=>{
        document.querySelector("#uploadform input").click();
    })
    document.querySelector("#uploadform input").addEventListener("change",function(){
           document.querySelector("#uploadform").submit();
    })

</script>


<% include ./partials/footer.ejs %>