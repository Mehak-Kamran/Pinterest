<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-100">
    <h1 class="px-2 py-7 font-semibold text-2xl text-black">Create a new Post</h1>
    <hr class="opacity-200 border-red-700">
    
    <form action="/createpost" class="flex flex-col items-center" method="post" enctype="multipart/form-data">
       <div class="border-2  border-red-700  mt-10 flex flex-col items-center rounded-md px-2 py-3">
        <input type="file" class="block px-5 py-3" name="postimage">
        <input class="block px-5 py-3 rounded-[2px] border-2 m-2" type="text" placeholder="Add a title" name="title">
        <textarea  class=" block px-5 py-3 rounded-md border-2 m-2 h-70" type="text" placeholder="Add Description" name="Description"></textarea>
        <input  class=" block rounded-md  px-5 py-3  m-2 bg-red-600 text-white" type="submit" value="Create Post" name="add"> 
    </div>
    </form>


</div>
